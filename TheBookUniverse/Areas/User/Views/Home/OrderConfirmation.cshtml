@using Models.Orders
@model OrderModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Order confirmed";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8 col-sm-10 mb-2 mx-2">
            <div class="row justify-content-center"></div>
                <h3>We have received your order</h3>
                <p>Thank you for ordering from us! We will send your order as soon as possible.</p>
                <div class="row text-start border border-1 border-secondary rounded mb-4 p-2 bg-white">
                    <h5>Date ordered: @Model.DateCreated</h5>
                    <p class="my-0 py-0">Total price: $@Model.Price</p>
                    <div class="row m-0 d-flex justify-content-center">
                        <div class="accordion m-3" id="@Model.Id">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#-@Model.Id" aria-expanded="false" aria-controls="-@Model.Id">
                                        Delivery information
                                    </button>
                                </h2>
                                <div id="-@Model.Id" class="accordion-collapse collapse" data-bs-parent="#@Model.Id">
                                    <div class="accordion-body color-1">
                                        <p>
                                            <strong>Name: </strong>
                                            <br />
                                            @Model.FirstName @Model.LastName
                                        </p>
                                        <p>
                                            <strong>Address: </strong>
                                            <br />
                                            @Model.Address
                                            <br />
                                            @Model.PostalCode @Model.City
                                            <br />
                                            @Model.Country
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @foreach (var book in Model.Items)
                    {
                        <div class="row m-2">
                            <div class="col-auto me-2">
                                <a href="@Url.Action("ViewBookDetails", "Home", new { id = book.Book.Id, area = "Common" })">
                                    <img src="@Url.Content(book.Book.PictureURL)" alt="@book.Book.Title" class="book-img-xs">
                                </a>
                            </div>
                            <div class="col ms-2">
                                <p class="m-0 p-0">@book.Book.Title </p>
                                <p class="m-0 p-0">(@book.Book.AuthorName) </p>
                                <p class="m-0 p-0">$@book.Book.Price </p>
                                <p class="m-0 p-0">Amount: @book.Quantity </p>

                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>