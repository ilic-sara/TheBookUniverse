@using Models.Users
@model LoginModel
@{

	Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Log in";
}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="row col-md-8 col-lg-6 col-xl-4 col-11">
            <div class="row justify-content-center">
                <form asp-action="Login" method="post" class="text-center">
                    @Html.AntiForgeryToken()
                    <h3>Log in</h3>
                    <hr />

                    @if (TempData["ResponseMessage"] is not null && TempData["Response"] is not null && TempData["Response"].Equals(false))
                    {
                        <div class="text-center text-danger">
                            @TempData["ResponseMessage"]
                        </div>
                    }
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group form-floating">
                        <input asp-for="UserName" class="form-control" />
                        <label asp-for="UserName" class="control-label"></label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-floating">
                        <input type="password" asp-for="Password" class="form-control" />
                        <label asp-for="Password" class="control-label"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <br />
                    <p>
                        Don't have an account?     <a href="@Url.Action("Registration", "Home", new { area = "Identity"})" >Sign in</a>
                    </p>
                    <div class="form-group">
                        <input type="submit" value="Log in" class="btn form-btn" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

