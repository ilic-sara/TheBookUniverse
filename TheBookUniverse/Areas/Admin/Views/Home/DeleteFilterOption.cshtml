@using Models.Admin
@model FilterOptionsModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Delete filter option";
}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-10">
            <div class="row">
                <h3>Are you sure you want to delete this filter option?</h3>
                <hr />
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @foreach (var value in Model.Values)
                            {
                                <div>@value</div>
                            }
                        </dd>
                    </dl>
                </div>
                <hr />
                <form asp-action="DeleteFilterOptionAction" method="post" class="my-3">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a href="@Url.Action("ViewFilterOptions")" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>