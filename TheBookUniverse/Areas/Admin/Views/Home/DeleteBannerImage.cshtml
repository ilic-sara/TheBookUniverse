@using Models.Admin
@model BannerImageModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Delete banner image";
}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-10">
            <div class="row justify-content-center">
                <h3>Are you sure you want to delete this banner image?</h3>
                <hr />
                <img src="@Model.PictureURL" style="width:80%" />
                <form asp-action="DeleteBannerImageAction" method="post" class="my-3">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a href="@Url.Action("ViewBannerImages")" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>