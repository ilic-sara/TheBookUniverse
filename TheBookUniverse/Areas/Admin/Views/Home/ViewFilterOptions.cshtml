@using Models.Admin
@model IEnumerable<FilterOptionsModel>
@{

	Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Filter Options";
}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-10">
            <div class="row justify-content-center">
                <h3>Filter Options</h3>
                <hr />
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Values)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                         @foreach (var value in item.Values)
                                         {
                                            <div>@value</div>
                                         }
                                    </td>
                                    <td>
                                            @Html.ActionLink("Details", "ViewFilterOptionDetails", new {  id=item.Id  }, new { @class = "text-color-2 text-decoration-none p-1" })
                                            @Html.ActionLink("Edit", "EditFilterOption", new {  id=item.Id  }, new { @class = "text-warning text-decoration-none p-1" })
                                            @Html.ActionLink("Delete", "DeleteFilterOption", new {  id=item.Id  }, new { @class = "text-danger text-decoration-none p-1" })
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>