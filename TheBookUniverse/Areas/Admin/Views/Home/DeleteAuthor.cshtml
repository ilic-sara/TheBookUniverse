@using Models.Authors
@model AuthorModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Delete author";
}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-10">
            <h3>Are you sure you want to delete @Model.Name along with their books?</h3>
            <hr />
            <div class="mt-3">
                <img src="@Url.Content(Model.PictureURL)" alt="@Model.Name" class="author-img-large">
                <p class="text-start">
                    @Html.DisplayFor(model => model.About)
                </p>
            </div>
            <form asp-action="DeleteAuthorAction" method="post" class="my-3">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a href="@Url.Action("ViewAuthors", "Home", new {area = "Common"})" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>